@model IEnumerable<Shop_Models.Category>

<div class="container p-3 bg-white">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="fa fa-plus" aria-hidden="true"></i> &nbsp; Create new Category</a>
        </div>
    </div>

    <br /><br />
    @if(Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Category Name</th>
                    <th>Display Order</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td width="50%">@item.Name</td>
                        <td width="45%">@item.DisplayOrder</td>
                        <td class="btn-group">
                            <a class="btn btn-primary" asp-route-Id="@item.Id" asp-controller="Category" asp-action="Edit">
                                <i class="fa fa-pencil" aria-hidden="true"></i>
                            </a>
                            <a class="btn btn-danger mx-2" asp-route-Id="@item.Id" asp-controller="category" asp-action="Delete">
                                <i class="fa fa-trash" aria-hidden="true"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else{
        <p>No category found</p>
    }
</div>
