@model Shop_Models.Category

<form method="post" asp-action="DeletePost">
    
    <input asp-for="Id" hidden />

    <div class="border p-3 bg-white">
        <div class="pl-3 form-group">
            <h3 class="text-info">Delete Category</h3>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row py-2">
                    <div class="col-md-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-md-8">
                        <input type="text" class="form-control" disabled asp-for="Name"/>
                    </div>
                </div>
                
                <div class="form-group row py-2">
                    <div class="col-md-4">
                        <label asp-for="DisplayOrder"></label>
                    </div>
                    <div class="col-md-8">
                        <input class="form-control" disabled asp-for="DisplayOrder"/>
                    </div>
                </div>
               
                <div class="form-group row py-2">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input class="btn btn-danger w-100" value="Delete" type="submit" />
                        </div>
                        <div class="col">
                            <a class="btn btn-info w-100" asp-action="Index">
                                <i class="fa fa-sign-out" aria-hidden="true"></i>Back
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
    </div>
</form>
