@model Shop_Models.Application



<form method="post" asp-action="DeletePost">
    
    <input asp-for="Id" hidden/>

    <div class="border p-3 bg-white">
        <div class="form-group pl-3">
            <h4 class="text-info p-3">Are you sure you want to delete this Application</h4>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row py-2">
                    <div class="col-md-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-md-8">
                        <input asp-for="Name" class="form-control" disabled />
                    </div>
                </div>
                
                <div class="form-group row py-2">
                    <div class="col-md-4">
                        <label asp-for="Description"></label>
                    </div>
                    <div class="col-md-8">
                        <input asp-for="Description" class="form-control" disabled/>
                    </div>
                </div>
               
                <div class="form-group row py-2">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Delete">
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-primary w-100">
                                <i class="fa fa-sign-out" aria-hidden="true"></i>Back
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>


