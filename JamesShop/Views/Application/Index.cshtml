@model IEnumerable<Shop_Models.Application>


<div class="container p-3 bg-white">
    <div class="row">
        <div class="col-md-6">
            <h3 class="text-primary">Application</h3>
        </div>
        <div class="col-md-6 text-end">
            <a asp-controller="Application" asp-action="Create" class="btn btn-primary">
                <i class="fa fa-plus" aria-hidden="true"></i> &nbsp; Create Application
            </a>
        </div>
    </div>
    <br /><br />
    @if(Model.Count() > 0)
    {
        <table class="table table-bordered table-striped w-100">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Links</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td width="50%">@item.Name</td>
                        <td width="45%">@item.Description</td>
                        <td class="btn-group">
                            <a class="btn btn-primary" asp-route-Id="@item.Id" asp-controller="Application" asp-action="Edit">
                                <i class="fa fa-pencil" aria-hidden="true"></i>
                            </a>
                            <a class="btn btn-danger mx-2" asp-route-Id="@item.Id" asp-controller="Application" asp-action="Delete">
                                <i class="fa fa-trash" aria-hidden="true"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No record found</p>
    }
</div>

