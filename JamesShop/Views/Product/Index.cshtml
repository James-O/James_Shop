@model IEnumerable<Shop_Models.Product>

<div class="container p-3 bg-white">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="CreOrdit" class="btn btn-primary">
                <i class="fa fa-plus" aria-hidden="true"></i> &nbsp; Create new Product
            </a>
        </div>
    </div>

    <br /><br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Price</th>
                    <th>ShortDesc</th>
                    @*<th>Description</th>*@
                    <th>Category</th>
                    <th>Application</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="20%">@item.Name</td>
                        <td width="10%">$@item.Price</td>
                        <td width="40%">@item.ShortDesc</td>
                        @*<td width="60%">@item.Description</td>*@
                        <td width="10%">@item.Category.Name</td>
                        <th width="15%">@item.Application.Name</th>
                        <td class="btn-group w-100">
                            <a class="btn btn-primary" asp-route-Id="@item.Id" asp-controller="Product" asp-action="CreOrdit">
                                <i class="fa fa-pencil" aria-hidden="true"></i>@* Update*@
                            </a>
                            <a class="btn btn-danger mx-2" asp-route-Id="@item.Id" asp-controller="Product" asp-action="Delete">
                                <i class="fa fa-trash" aria-hidden="true"></i> @*Delete*@
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Product found</p>
    }
</div>

